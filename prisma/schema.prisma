generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Testimoni {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  author String
  role String
  rating Int @default(5)
  quote String
  avatar String @default("/placeholder.svg?height=100&width=100")
  // createdAt DateTime @default(now())
  // updatedAt DateTime @updatedAt

  @@map("testimonials")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String
  username String
  password String
  @@map("users")
}